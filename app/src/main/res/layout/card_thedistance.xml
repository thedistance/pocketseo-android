<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- moz -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/card_padding_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/TheDistancePanelHeadline"
                    android:textAppearance="@style/PocketSeo.Headline"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/thedistance_logo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/TheDistancePanelTagline"/>


            </LinearLayout>
            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="start|top"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_send_feedback"
                    android:layout_width="wrap_content"
                    style="@style/PocketSeo.CardButton"
                    android:layout_height="wrap_content"
                    android:text="@string/TheDistancePanelButtonSendFeedback"/>

                <Button
                    android:id="@+id/button_get_in_touch"
                    android:layout_width="wrap_content"
                    style="@style/PocketSeo.CardButton"
                    android:layout_height="wrap_content"
                    android:text="@string/TheDistancePanelButtonGetInTouch"/>

                <Button
                    android:id="@+id/button_visit_website"
                    android:layout_width="wrap_content"
                    style="@style/PocketSeo.CardButton"
                    android:layout_height="wrap_content"
                    android:text="@string/TheDistancePanelButtonVisitWebsite"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>