<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="alexaScore"
            type="io.pocketseo.viewmodel.AlexaScoreViewModel"/>

        <variable
            name="alexaError"
            type="java.lang.String"/>

        <variable
            name="alexaLoading"
            type="boolean"/>

        <import type="android.view.View"/>
    </data>


    <!-- alexa card -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="@{ alexaScore == null &amp;&amp; alexaError == null &amp;&amp; !alexaLoading ? View.GONE : View.VISIBLE }">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/card_padding_top"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:paddingTop="@dimen/card_padding_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:src="@drawable/powered_by_alexa"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{alexaError == null ? View.VISIBLE : View.GONE }">

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@{ alexaScore.popularityText }"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/URLAlexaPopularity"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@{ alexaScore.reachRank }"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/URLAlexaReachRank"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@{ alexaScore.rankDelta }"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/URLAlexaRankDelta"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
                </LinearLayout>
            </LinearLayout>

            <include
                errorMessage="@{alexaError}"
                layout="@layout/error"/>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{ alexaLoading ? View.VISIBLE : View.GONE }"/>
    </android.support.v7.widget.CardView>
</layout>